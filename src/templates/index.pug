                span.glyphicon.glyphicon-menu-right(aria-hidden='true')
            li.nav-item
              a.nav-link(href='#') Settings
      .container.chart-view
        .row.chart-row
          .chart-container
            canvas#chart
        .row.query-row
          p.query-thesis
        .row.chat-row
          .swiper-container
            .swiper-wrapper
      .container.query-view
        .row
          .query-container
            ul.available-queries.list-group