<?xml version='1.0' encoding='utf-8'?>
<widget id="fi.metatavu.LiveDelphiApp" version="0.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Live Delphi</name>
    <description>Delphi technique is used for bringing values, new viewpoints and ideas as a foundation for planning and decision making, i.e. making qualitative research. Live Delphi application extends Delphi method with realtime data collection features</description>
    <author email="info@metatavu.fi" href="https://metatavu.fi">Metatavu Oy</author>
    <content src="index.html" />
    <access origin="https://ssl.gstatic.com" />
    <access origin="https://auth.metatavu.io" />
    <access origin="https://cdn.metatavu.io" />
    <access origin="http://live-dev.edelphi.org:8000" />
    <access origin="https://live.edelphi.org" />
    <access origin="http://localhost:8000" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="ws://*/*" />
    <allow-intent href="wss://*/*" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="handset" />
    <preference name="OverrideUserAgent" value="Mozilla/5.0 LiveDelphiApp" />
    <engine name="browser" spec="~4.1.0" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
